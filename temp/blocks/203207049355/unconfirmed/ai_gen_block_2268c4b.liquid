{% doc %}
  @prompt
    画像の上にコレクション名とボタン, カスタムタイトルのフォントを変更
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-overlay-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-collection-overlay-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-overlay-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-collection-overlay-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collection-overlay-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-overlay-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-collection-overlay-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.vertical_alignment }};
    align-items: {{ block.settings.horizontal_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {% if block.settings.horizontal_alignment == 'flex-start' %}left{% elsif block.settings.horizontal_alignment == 'flex-end' %}right{% else %}center{% endif %};
  }

  .ai-collection-overlay-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    line-height: 1.2;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px {{ block.settings.text_shadow_color }};
  }

  .ai-collection-overlay-custom-title-{{ ai_gen_id }} {
    color: {{ block.settings.custom_text_color }};
    margin: 0 0 {{ block.settings.custom_title_spacing }}px;
    font-family: {{ block.settings.custom_title_font.family }}, {{ block.settings.custom_title_font.fallback_families }};
    font-weight: {{ block.settings.custom_title_font.weight }};
    font-size: {{ block.settings.custom_title_size }}px;
    line-height: 1.2;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px {{ block.settings.text_shadow_color }};
  }

  .ai-collection-overlay-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-collection-overlay-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-overlay-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-collection-overlay-custom-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.custom_title_size }}px * 0.8);
    }

    .ai-collection-overlay-button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_font_size }}px * 0.9);
    }

    .ai-collection-overlay-content-{{ ai_gen_id }} {
      padding: calc({{ block.settings.content_padding }}px * 0.7);
    }
  }
{% endstyle %}

<div
  class="ai-collection-overlay-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-overlay-container-{{ ai_gen_id }}">
    {% if block.settings.collection_image %}
      <img
        src="{{ block.settings.collection_image | image_url: width: 2000 }}"
        alt="{{ block.settings.collection_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.collection_image.width }}"
        height="{{ block.settings.collection_image.height }}"
        class="ai-collection-overlay-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-overlay-placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
        <div class="ai-collection-overlay-empty-state-{{ ai_gen_id }}">
          画像を追加してください
        </div>
      </div>
    {% endif %}

    <div class="ai-collection-overlay-content-{{ ai_gen_id }}">
      {% if block.settings.show_custom_title and block.settings.custom_title != blank %}
        <h2 class="ai-collection-overlay-custom-title-{{ ai_gen_id }}">
          {{ block.settings.custom_title }}
        </h2>
      {% endif %}

      {% if block.settings.show_collection_name %}
        {% if block.settings.collection != blank %}
          <h3 class="ai-collection-overlay-title-{{ ai_gen_id }}">
            {{ block.settings.collection.title }}
          </h3>
        {% else %}
          <h3 class="ai-collection-overlay-title-{{ ai_gen_id }}">
            コレクション名
          </h3>
        {% endif %}
      {% endif %}

      {% if block.settings.show_button %}
        {% if block.settings.collection != blank %}
          <a
            href="{{ block.settings.collection.url }}"
            class="ai-collection-overlay-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% else %}
          <a
            href="#"
            class="ai-collection-overlay-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

