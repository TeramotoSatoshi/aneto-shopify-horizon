{% doc %}
  @prompt
    画像の上にコレクション名とボタン
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-overlay-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-collection-overlay__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-overlay__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-collection-overlay__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collection-overlay__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-overlay__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-collection-overlay__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position }};
    align-items: {{ block.settings.content_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-overlay__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-collection-overlay__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-collection-overlay__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-overlay__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-collection-overlay__button-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.button_font_size }}px * 0.9);
      padding: calc({{ block.settings.button_padding_vertical }}px * 0.8) calc({{ block.settings.button_padding_horizontal }}px * 0.8);
    }

    .ai-collection-overlay__content-{{ ai_gen_id }} {
      padding: calc({{ block.settings.content_padding }}px * 0.7);
    }
  }
{% endstyle %}

<div
  class="ai-collection-overlay-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-overlay__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.collection_image %}
      <img
        src="{{ block.settings.collection_image | image_url: width: 2000 }}"
        alt="{{ block.settings.collection_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.collection_image.width }}"
        height="{{ block.settings.collection_image.height }}"
        class="ai-collection-overlay__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-overlay__placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
        <div class="ai-collection-overlay__empty-state-{{ ai_gen_id }}">
          画像を追加してください
        </div>
      </div>
    {% endif %}

    <div class="ai-collection-overlay__content-{{ ai_gen_id }}">
      {% if block.settings.collection_title != blank %}
        <h2 class="ai-collection-overlay__title-{{ ai_gen_id }}">
          {{ block.settings.collection_title }}
        </h2>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-collection-overlay__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

