{% doc %}
  @prompt
    画像の上にコレクション名とボタン
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-collection-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
  }

  .ai-collection-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-collection-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-collection-banner__content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 2;
    width: 90%;
    max-width: 600px;
  }

  .ai-collection-banner__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.spacing }}px;
    font-weight: 600;
  }

  .ai-collection-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-collection-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-banner__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-collection-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .ai-collection-banner__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-collection-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-banner__placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-collection-banner__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-collection-banner__content-{{ ai_gen_id }}">
      {% if block.settings.collection != blank %}
        <h2 class="ai-collection-banner__title-{{ ai_gen_id }}">
          {{ block.settings.collection.title }}
        </h2>
      {% elsif block.settings.custom_title != blank %}
        <h2 class="ai-collection-banner__title-{{ ai_gen_id }}">
          {{ block.settings.custom_title }}
        </h2>
      {% endif %}

      {% if block.settings.button_text != blank %}
        {% if block.settings.collection != blank %}
          <a
            href="{{ block.settings.collection.url }}"
            class="ai-collection-banner__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% elsif block.settings.button_link != blank %}
          <a
            href="{{ block.settings.button_link }}"
            class="ai-collection-banner__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

