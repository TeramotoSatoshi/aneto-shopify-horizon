    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_background_color }};
    color: {{ block.settings.nav_text_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 4;
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .ai-slideshow-navigation-{{ ai_gen_id }}:hover {
    opacity: 1;
    background-color: {{ block.settings.nav_hover_background_color }};
    color: {{ block.settings.nav_hover_text_color }};
