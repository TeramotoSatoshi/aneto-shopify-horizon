<slideshow-component-{{ ai_gen_id }}
  class="ai-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay_enabled }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  data-transition="{{ block.settings.transition_type }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-slideshow-track-{{ ai_gen_id }}" data-track>
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_image_desktop'
          assign mobile_image_key = 'slide_' | append: i | append: '_image_mobile'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign subtext_key = 'slide_' | append: i | append: '_subtext'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_link_key = 'slide_' | append: i | append: '_button_link'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign heading = block.settings[heading_key]
          assign subtext = block.settings[subtext_key]
          assign button_text = block.settings[button_text_key]
          assign button_link = block.settings[button_link_key]
        %}

        {% if slide_enabled %}
          <div class="ai-slideshow-slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            {% if desktop_image != blank or mobile_image != blank %}
              {% if desktop_image != blank %}
                <img
                  src="{{ desktop_image | image_url: width: 2000 }}"
                  alt="{{ desktop_image.alt | escape }}"
                  class="ai-slideshow-image-{{ ai_gen_id }} ai-slideshow-image-desktop-{{ ai_gen_id }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  width="{{ desktop_image.width }}"
                  height="{{ desktop_image.height }}"
                >
              {% endif %}
              {% if mobile_image != blank %}
                <img
                  src="{{ mobile_image | image_url: width: 1000 }}"
                  alt="{{ mobile_image.alt | escape }}"
                  class="ai-slideshow-image-{{ ai_gen_id }} ai-slideshow-image-mobile-{{ ai_gen_id }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  width="{{ mobile_image.width }}"
                  height="{{ mobile_image.height }}"
                >
              {% elsif desktop_image != blank %}
                <img
                  src="{{ desktop_image | image_url: width: 1000 }}"
                  alt="{{ desktop_image.alt | escape }}"
                  class="ai-slideshow-image-{{ ai_gen_id }} ai-slideshow-image-mobile-{{ ai_gen_id }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  width="{{ desktop_image.width }}"
                  height="{{ desktop_image.height }}"
                >
              {% endif %}
            {% else %}
              <div class="ai-slideshow-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
                <div class="ai-slideshow-empty-state-{{ ai_gen_id }}">
                  Add an image for slide {{ i }}
                </div>
              </div>
            {% endif %}

            {% if heading != blank or subtext != blank %}
              <div class="ai-slideshow-content-overlay-{{ ai_gen_id }} ai-slideshow-text-position-{{ block.settings.text_position }}-{{ ai_gen_id }}">
                <div class="ai-slideshow-text-content-{{ ai_gen_id }}">
                  {% if heading != blank %}
                    <h2 class="ai-slideshow-heading-{{ ai_gen_id }}">{{ heading }}</h2>
                  {% endif %}
                  {% if subtext != blank %}
                    <div class="ai-slideshow-subtext-{{ ai_gen_id }}">{{ subtext }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}

            {% if button_text != blank and button_link != blank %}
              <div class="ai-slideshow-button-overlay-{{ ai_gen_id }} ai-slideshow-button-position-{{ block.settings.button_position }}-{{ ai_gen_id }}">
                <a href="{{ button_link }}" class="ai-slideshow-button-{{ ai_gen_id }}">
                  {{ button_text }}
                </a>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_navigation %}
      <button class="ai-slideshow-navigation-{{ ai_gen_id }} ai-slideshow-nav-prev-{{ ai_gen_id }}" data-prev aria-label="Previous slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      <button class="ai-slideshow-navigation-{{ ai_gen_id }} ai-slideshow-nav-next-{{ ai_gen_id }}" data-next aria-label="Next slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-slideshow-dots-{{ ai_gen_id }}" data-dots></div>
    {% endif %}
  </div>
</slideshow-component-{{ ai_gen_id }}>

<script>
  (function() {
    class SlideshowComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.slideElements = this.querySelectorAll('[data-slide]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        
        this.autoplayEnabled = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
        this.transitionType = this.dataset.transition;

        this.slides = Array.from(this.slideElements).map((slide, index) => ({
          element: slide,
          index: index
        }));

        if (this.slides.length === 0) return;

        this.setupEventListeners();
        this.createDots();
        this.updateSlideshow();
        
        if (this.autoplayEnabled && this.slides.length > 1) {
          this.startAutoplay();
        }

        this.setupIntersectionObserver();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplayEnabled && this.slides.length > 1) {
            this.startAutoplay();
          }
        });

        document.addEventListener('visibilitychange', () => {
          if (document.hidden) {
            this.stopAutoplay();
          } else if (this.autoplayEnabled && this.slides.length > 1) {
            this.startAutoplay();
          }
        });
      }

      createDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        this.slides.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.className = 'ai-slideshow-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      updateSlideshow() {
        if (this.slides.length === 0) return;

        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        const dots = this.dotsContainer?.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');
        if (dots) {
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === this.currentSlide);
          });
        }
      }

      nextSlide() {
        if (this.isTransitioning || this.slides.length <= 1) return;
        
        this.isTransitioning = true;
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlideshow();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      previousSlide() {
        if (this.isTransitioning || this.slides.length <= 1) return;
        
        this.isTransitioning = true;
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlideshow();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      goToSlide(index) {
        if (this.isTransitioning || index === this.currentSlide || this.slides.length <= 1) return;
        
        this.isTransitioning = true;
        this.currentSlide = index;
        this.updateSlideshow();
        
        setTimeout(() => {
          this.isTransitioning = false;
        }, 500);
      }

      startAutoplay() {
        this.stopAutoplay();
        if (this.slides.length > 1) {
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, this.autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      setupIntersectionObserver() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              if (this.autoplayEnabled && this.slides.length > 1) {
                this.startAutoplay();
              }
            } else {
              this.stopAutoplay();
            }
          });
        }, { threshold: 0.5 });

        observer.observe(this);
      }
    }

    customElements.define('slideshow-component-{{ ai_gen_id }}', SlideshowComponent{{ ai_gen_id }});
  })();
</script>

