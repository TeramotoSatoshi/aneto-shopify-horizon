<slideshow-{{ ai_gen_id }}
  class="ai-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-slideshow-track-{{ ai_gen_id }}">
      {% assign slide_count = 0 %}
      {% for i in (1..5) %}
        {% assign image_desktop_key = 'slide_' | append: i | append: '_image_desktop' %}
        {% assign image_mobile_key = 'slide_' | append: i | append: '_image_mobile' %}
        {% assign heading_key = 'slide_' | append: i | append: '_heading' %}
        {% assign text_key = 'slide_' | append: i | append: '_text' %}
        {% assign button_text_key = 'slide_' | append: i | append: '_button_text' %}
        {% assign button_link_key = 'slide_' | append: i | append: '_button_link' %}

        {% assign image_desktop = block.settings[image_desktop_key] %}
        {% assign image_mobile = block.settings[image_mobile_key] %}
        {% assign heading = block.settings[heading_key] %}
        {% assign text = block.settings[text_key] %}
        {% assign button_text = block.settings[button_text_key] %}
        {% assign button_link = block.settings[button_link_key] %}

        {% if image_desktop != blank or heading != blank or text != blank %}
          {% assign slide_count = slide_count | plus: 1 %}
          <div class="ai-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
            {% if image_desktop %}
              <img
                src="{{ image_desktop | image_url: width: 2000 }}"
                alt="{{ image_desktop.alt | escape }}"
                class="ai-slide-image-{{ ai_gen_id }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ image_desktop.width }}"
                height="{{ image_desktop.height }}"
              >
            {% else %}
              <div class="ai-slide-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if image_mobile %}
              <img
                src="{{ image_mobile | image_url: width: 1000 }}"
                alt="{{ image_mobile.alt | escape }}"
                class="ai-slide-image-mobile-{{ ai_gen_id }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ image_mobile.width }}"
                height="{{ image_mobile.height }}"
              >
            {% elsif image_desktop %}
              <img
                src="{{ image_desktop | image_url: width: 1000 }}"
                alt="{{ image_desktop.alt | escape }}"
                class="ai-slide-image-mobile-{{ ai_gen_id }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ image_desktop.width }}"
                height="{{ image_desktop.height }}"
              >
            {% endif %}

            <div class="ai-slide-content-{{ ai_gen_id }}">
              {% if heading != blank %}
                <h2 class="ai-slide-heading-{{ ai_gen_id }}">{{ heading }}</h2>
              {% endif %}

              {% if text != blank %}
                <div class="ai-slide-text-{{ ai_gen_id }}">{{ text }}</div>
              {% endif %}

              {% if button_text != blank and button_link != blank %}
                <a
                  href="{{ button_link }}"
                  class="ai-slide-button-{{ ai_gen_id }}"
                >
                  {{ button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if slide_count > 1 %}
      <button
        class="ai-slideshow-navigation-{{ ai_gen_id }} ai-slideshow-prev-{{ ai_gen_id }}"
        aria-label="Previous slide"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button
        class="ai-slideshow-navigation-{{ ai_gen_id }} ai-slideshow-next-{{ ai_gen_id }}"
        aria-label="Next slide"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>

      <div class="ai-slideshow-dots-{{ ai_gen_id }}">
        {% for i in (1..slide_count) %}
          <button
            class="ai-slideshow-dot-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            aria-label="Go to slide {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class Slideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slideshow-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slideshow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slideshow-next-{{ ai_gen_id }}');
        
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        this.setupEventListeners();
        this.updateSlidePosition();
        
        if (this.autoplay && this.slides.length > 1) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay && this.slides.length > 1) {
            this.startAutoplay();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') this.previousSlide();
          if (e.key === 'ArrowRight') this.nextSlide();
        });
      }

      updateSlidePosition() {
        if (!this.track || this.slides.length === 0) return;
        
        const translateX = -this.currentSlide * 20;
        this.track.style.transform = `translateX(${translateX}%)`;
        
        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlidePosition();
      }

      previousSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlidePosition();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlidePosition();
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('slideshow-{{ ai_gen_id }}', Slideshow{{ ai_gen_id }});
  })();
</script>

