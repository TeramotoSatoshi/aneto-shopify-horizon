<hero-slideshow-{{ ai_gen_id }}
  class="ai-hero-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-hero-slides-wrapper-{{ ai_gen_id }}">
      {% assign slides = 'slide_1,slide_2,slide_3' | split: ',' %}
      {% assign slide_count = 0 %}
      
      {% for slide_key in slides %}
        {% assign image_desktop_key = slide_key | append: '_image_desktop' %}
        {% assign image_mobile_key = slide_key | append: '_image_mobile' %}
        {% assign heading_key = slide_key | append: '_heading' %}
        {% assign text_key = slide_key | append: '_text' %}
        {% assign text_position_key = slide_key | append: '_text_position' %}
        {% assign button_text_key = slide_key | append: '_button_text' %}
        {% assign button_url_key = slide_key | append: '_button_url' %}
        {% assign button_position_key = slide_key | append: '_button_position' %}
        
        {% assign image_desktop = block.settings[image_desktop_key] %}
        {% assign image_mobile = block.settings[image_mobile_key] %}
        {% assign heading = block.settings[heading_key] %}
        {% assign text = block.settings[text_key] %}
        {% assign text_position = block.settings[text_position_key] %}
        {% assign button_text = block.settings[button_text_key] %}
        {% assign button_url = block.settings[button_url_key] %}
        {% assign button_position = block.settings[button_position_key] %}
        
        {% if image_desktop != blank or image_mobile != blank or heading != blank or text != blank %}
          {% assign slide_count = slide_count | plus: 1 %}
          <div class="ai-hero-slide-{{ ai_gen_id }} {% if slide_count == 1 %}active{% endif %}" data-slide="{{ slide_count }}">
            {% if image_desktop or image_mobile %}
              <picture>
                {% if image_mobile %}
                  <source media="(max-width: 749px)" srcset="{{ image_mobile | image_url: width: 800 }}">
                {% endif %}
                {% if image_desktop %}
                  <img
                    src="{{ image_desktop | image_url: width: 2000 }}"
                    alt="{{ image_desktop.alt | escape }}"
                    class="ai-hero-slide-image-{{ ai_gen_id }}"
                    loading="{% if slide_count == 1 %}eager{% else %}lazy{% endif %}"
                    width="{{ image_desktop.width }}"
                    height="{{ image_desktop.height }}"
                  >
                {% else %}
                  <img
                    src="{{ image_mobile | image_url: width: 2000 }}"
                    alt="{{ image_mobile.alt | escape }}"
                    class="ai-hero-slide-image-{{ ai_gen_id }}"
                    loading="{% if slide_count == 1 %}eager{% else %}lazy{% endif %}"
                    width="{{ image_mobile.width }}"
                    height="{{ image_mobile.height }}"
                  >
                {% endif %}
              </picture>
            {% else %}
              <div class="ai-hero-slide-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-hero-slide-content-{{ ai_gen_id }}">
              {% if heading != blank or text != blank %}
                <div class="ai-hero-slide-text-wrapper-{{ ai_gen_id }} position-{{ text_position }}">
                  {% if heading != blank %}
                    <h2 class="ai-hero-slide-heading-{{ ai_gen_id }}">{{ heading }}</h2>
                  {% endif %}
                  {% if text != blank %}
                    <div class="ai-hero-slide-text-{{ ai_gen_id }}">{{ text }}</div>
                  {% endif %}
                </div>
              {% endif %}

              {% if button_text != blank and button_url != blank %}
                <div class="ai-hero-slide-button-wrapper-{{ ai_gen_id }} position-{{ button_position }}">
                  <a href="{{ button_url }}" class="ai-hero-slide-button-{{ ai_gen_id }}">
                    {{ button_text }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}

      {% if slide_count == 0 %}
        <div class="ai-hero-slide-{{ ai_gen_id }} active">
          <div class="ai-hero-slide-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-hero-empty-state-{{ ai_gen_id }}">
              Add images and content to create your slideshow
            </div>
          </div>
        </div>
      {% endif %}
    </div>

    {% if slide_count > 1 %}
      <button class="ai-hero-navigation-{{ ai_gen_id }} prev" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button class="ai-hero-navigation-{{ ai_gen_id }} next" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>

      <div class="ai-hero-dots-{{ ai_gen_id }}">
        {% for i in (1..slide_count) %}
          <button class="ai-hero-dot-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}" data-slide="{{ i }}" aria-label="Go to slide {{ i }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</hero-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 1;
        this.totalSlides = 0;
        this.autoplayInterval = null;
        this.isAutoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.slides = this.querySelectorAll('.ai-hero-slide-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-hero-dot-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-hero-navigation-{{ ai_gen_id }}.prev');
        this.nextButton = this.querySelector('.ai-hero-navigation-{{ ai_gen_id }}.next');
        
        this.totalSlides = this.slides.length;
        
        if (this.totalSlides <= 1) return;

        this.setupEventListeners();
        
        if (this.isAutoplay) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index + 1));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isAutoplay) {
            this.startAutoplay();
          }
        });
      }

      goToSlide(slideNumber) {
        if (slideNumber < 1 || slideNumber > this.totalSlides) return;

        this.slides.forEach((slide, index) => {
          slide.classList.toggle('active', index + 1 === slideNumber);
        });

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index + 1 === slideNumber);
        });

        this.currentSlide = slideNumber;
      }

      nextSlide() {
        const nextSlide = this.currentSlide >= this.totalSlides ? 1 : this.currentSlide + 1;
        this.goToSlide(nextSlide);
      }

      previousSlide() {
        const prevSlide = this.currentSlide <= 1 ? this.totalSlides : this.currentSlide - 1;
        this.goToSlide(prevSlide);
      }

      startAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
        
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('hero-slideshow-{{ ai_gen_id }}', HeroSlideshow{{ ai_gen_id }});
  })();
</script>

