    position: relative;
    width: 100%;
    max-width: {% if block.settings.width_type == 'full' %}100%{% elsif block.settings.width_type == 'custom' %}{{ block.settings.custom_width }}%{% else %}{{ block.settings.max_width }}px{% endif %};
    margin: 0 auto;
    overflow: hidden;
    height: {{ block.settings.height_desktop }}vh;
  }

  .ai-hero-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .ai-hero-slides-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .ai-hero-slide-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .ai-hero-slide-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-hero-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

