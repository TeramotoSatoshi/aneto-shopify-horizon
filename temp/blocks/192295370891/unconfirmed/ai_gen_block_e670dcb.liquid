<hero-slideshow-{{ ai_gen_id }}
  class="ai-hero-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-hero-slides-wrapper-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign desktop_image_key = 'slide_' | append: i | append: '_desktop_image'
          assign mobile_image_key = 'slide_' | append: i | append: '_mobile_image'
          assign heading_key = 'slide_' | append: i | append: '_heading'
          assign subtext_key = 'slide_' | append: i | append: '_subtext'
          assign button_text_key = 'slide_' | append: i | append: '_button_text'
          assign button_url_key = 'slide_' | append: i | append: '_button_url'
          assign text_position_key = 'slide_' | append: i | append: '_text_position'

          assign slide_enabled = block.settings[slide_enabled_key]
          assign desktop_image = block.settings[desktop_image_key]
          assign mobile_image = block.settings[mobile_image_key]
          assign heading = block.settings[heading_key]
          assign subtext = block.settings[subtext_key]
          assign button_text = block.settings[button_text_key]
          assign button_url = block.settings[button_url_key]
          assign text_position = block.settings[text_position_key]
        %}

        {% if slide_enabled %}
          <div class="ai-hero-slide-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}">
            {% if block.settings.show_overlay %}
              <div class="ai-hero-slide-overlay-{{ ai_gen_id }}"></div>
            {% endif %}

            {% if desktop_image or mobile_image %}
              <picture>
                {% if mobile_image %}
                  <source media="(max-width: 749px)" srcset="{{ mobile_image | image_url: width: 800 }}">
                {% endif %}
                {% if desktop_image %}
                  <img
                    src="{{ desktop_image | image_url: width: 2000 }}"
                    alt="{{ desktop_image.alt | escape }}"
                    class="ai-hero-slide-image-{{ ai_gen_id }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                    width="{{ desktop_image.width }}"
                    height="{{ desktop_image.height }}"
                  >
                {% endif %}
              </picture>
            {% else %}
              <div class="ai-hero-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
                <div class="ai-hero-empty-state-{{ ai_gen_id }}">
                  Add images for slide {{ forloop.index }}
                </div>
              </div>
            {% endif %}

            {% if heading != blank or subtext != blank or button_text != blank %}
              <div class="ai-hero-slide-content-{{ ai_gen_id }}">
                <div class="ai-hero-text-wrapper-{{ ai_gen_id }} position-{{ text_position }}">
                  {% if heading != blank %}
                    <h2 class="ai-hero-heading-{{ ai_gen_id }}">{{ heading }}</h2>
                  {% endif %}
                  
                  {% if subtext != blank %}
                    <div class="ai-hero-subtext-{{ ai_gen_id }}">{{ subtext }}</div>
                  {% endif %}
                  
                  {% if button_text != blank and button_url != blank %}
                    <a href="{{ button_url }}" class="ai-hero-button-{{ ai_gen_id }}">
                      {{ button_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_navigation %}
      <button class="ai-hero-navigation-{{ ai_gen_id }} ai-hero-nav-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      
      <button class="ai-hero-navigation-{{ ai_gen_id }} ai-hero-nav-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-hero-dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
            assign slide_enabled = block.settings[slide_enabled_key]
          %}
          {% if slide_enabled %}
            <button 
              class="ai-hero-dot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              data-slide="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</hero-slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroSlideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.dots = [];
        this.autoplayTimer = null;
        this.isAutoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.slides = Array.from(this.querySelectorAll('.ai-hero-slide-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-hero-dot-{{ ai_gen_id }}'));
        this.prevButton = this.querySelector('.ai-hero-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-hero-nav-next-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.updateSlideVisibility();
        
        if (this.isAutoplay && this.slides.length > 1) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isAutoplay && this.slides.length > 1) {
            this.startAutoplay();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') this.previousSlide();
          if (e.key === 'ArrowRight') this.nextSlide();
        });
      }

      updateSlideVisibility() {
        this.slides.forEach((slide, index) => {
          slide.classList.toggle('active', index === this.currentSlide);
        });

        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      goToSlide(index) {
        if (index >= 0 && index < this.slides.length) {
          this.currentSlide = index;
          this.updateSlideVisibility();
        }
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlideVisibility();
      }

      previousSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlideVisibility();
      }

      startAutoplay() {
        this.stopAutoplay();
        if (this.slides.length > 1) {
          this.autoplayTimer = setInterval(() => {
            this.nextSlide();
          }, this.autoplaySpeed);
        }
      }

      stopAutoplay() {
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }
    }

    customElements.define('hero-slideshow-{{ ai_gen_id }}', HeroSlideshow{{ ai_gen_id }});
  })();
</script>

