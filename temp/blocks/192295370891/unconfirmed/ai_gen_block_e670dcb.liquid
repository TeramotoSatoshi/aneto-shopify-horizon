      width: {{ block.settings.width_percentage }}%;
      margin: 0 auto;
    {% elsif block.settings.width_type == 'max_width' %}
      max-width: {{ block.settings.max_width }}px;
      margin: 0 auto;
    {% endif %}
    
    {% if block.settings.height_type == 'viewport' %}
      height: {{ block.settings.height_viewport }}vh;
    {% elsif block.settings.height_type == 'pixels' %}
      height: {{ block.settings.height_pixels }}px;
    {% elsif block.settings.height_type == 'percentage' %}
      height: {{ block.settings.height_percentage }}vh;
    {% endif %}
