<slideshow-{{ ai_gen_id }}
  class="ai-slideshow-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slideshow-container-{{ ai_gen_id }}">
    <div class="ai-slideshow-track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign slide_enabled = block.settings[slide_enabled_key]
        %}
        
        {% if slide_enabled %}
          {% liquid
            assign desktop_image_key = 'slide_' | append: i | append: '_image_desktop'
            assign mobile_image_key = 'slide_' | append: i | append: '_image_mobile'
            assign heading_key = 'slide_' | append: i | append: '_heading'
            assign text_key = 'slide_' | append: i | append: '_text'
            assign button_text_key = 'slide_' | append: i | append: '_button_text'
            assign button_link_key = 'slide_' | append: i | append: '_button_link'
            assign text_position_key = 'slide_' | append: i | append: '_text_position'
            assign button_position_key = 'slide_' | append: i | append: '_button_position'
            assign text_color_key = 'slide_' | append: i | append: '_text_color'
            assign button_color_key = 'slide_' | append: i | append: '_button_color'

            assign desktop_image = block.settings[desktop_image_key]
            assign mobile_image = block.settings[mobile_image_key]
            assign heading = block.settings[heading_key]
            assign text = block.settings[text_key]
            assign button_text = block.settings[button_text_key]
            assign button_link = block.settings[button_link_key]
            assign text_position = block.settings[text_position_key]
            assign button_position = block.settings[button_position_key]
            assign text_color = block.settings[text_color_key]
            assign button_color = block.settings[button_color_key]
          %}

          <div class="ai-slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            {% if desktop_image %}
              <img
                src="{{ desktop_image | image_url: width: 2000 }}"
                alt="{{ desktop_image.alt | escape }}"
                class="ai-slide-image-{{ ai_gen_id }} ai-slide-image-desktop-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ desktop_image.width }}"
                height="{{ desktop_image.height }}"
              >
            {% endif %}

            {% if mobile_image %}
              <img
                src="{{ mobile_image | image_url: width: 1000 }}"
                alt="{{ mobile_image.alt | escape }}"
                class="ai-slide-image-{{ ai_gen_id }} ai-slide-image-mobile-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ mobile_image.width }}"
                height="{{ mobile_image.height }}"
              >
            {% endif %}

            {% unless desktop_image or mobile_image %}
              <div class="ai-slide-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
                <div class="ai-slide-empty-state-{{ ai_gen_id }}">
                  Add images for slide {{ i }}
                </div>
              </div>
            {% endunless %}

            <div 
              class="ai-slide-content-{{ ai_gen_id }} ai-slide-content-{{ text_position }}-{{ ai_gen_id }}"
              style="color: {{ text_color }};"
            >
              <div class="ai-slide-text-wrapper-{{ ai_gen_id }}">
                {% if heading != blank %}
                  <h2 class="ai-slide-heading-{{ ai_gen_id }}">{{ heading }}</h2>
                {% endif %}

                {% if text != blank %}
                  <div class="ai-slide-text-{{ ai_gen_id }}">{{ text }}</div>
                {% endif %}

                {% if button_text != blank and button_link != blank %}
                  <div class="ai-slide-button-wrapper-{{ ai_gen_id }}">
                    <a 
                      href="{{ button_link }}" 
                      class="ai-slide-button-{{ ai_gen_id }}"
                      style="background-color: {{ button_color }}; color: {{ block.settings.button_text_color }};"
                    >
                      {{ button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_arrows %}
      <button class="ai-slideshow-nav-{{ ai_gen_id }} ai-slideshow-nav-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button class="ai-slideshow-nav-{{ ai_gen_id }} ai-slideshow-nav-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}

    {% if block.settings.show_dots %}
      <div class="ai-slideshow-dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
            assign slide_enabled = block.settings[slide_enabled_key]
          %}
          {% if slide_enabled %}
            <button 
              class="ai-slideshow-dot-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}" 
              data-slide="{{ i }}"
              aria-label="Go to slide {{ i }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</slideshow-{{ ai_gen_id }}>

<script>
  (function() {
    class Slideshow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-slideshow-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-slideshow-nav-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-slideshow-nav-next-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-slideshow-dot-{{ ai_gen_id }}');
        
        this.autoplay = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        this.setupEventListeners();
        this.updateSlidePosition();
        
        if (this.autoplay && this.slides.length > 1) {
          this.startAutoplay();
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplay && this.slides.length > 1) {
            this.startAutoplay();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') this.previousSlide();
          if (e.key === 'ArrowRight') this.nextSlide();
        });
      }

      updateSlidePosition() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;
        
        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slides.length;
        this.updateSlidePosition();
      }

      previousSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
        this.updateSlidePosition();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlidePosition();
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('slideshow-{{ ai_gen_id }}', Slideshow{{ ai_gen_id }});
  })();
</script>

