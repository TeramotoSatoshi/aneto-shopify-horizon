    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
  }

  .ai-slide-content-top-center-{{ ai_gen_id }} {
    justify-content: flex-start;
    align-items: center;
    text-align: center;
  }

  .ai-slide-content-top-right-{{ ai_gen_id }} {
    justify-content: flex-start;
    align-items: flex-end;
    text-align: right;
  }

  .ai-slide-content-center-left-{{ ai_gen_id }} {
    justify-content: center;
    align-items: flex-start;
    text-align: left;
  }

  .ai-slide-content-center-center-{{ ai_gen_id }} {
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .ai-slide-content-center-right-{{ ai_gen_id }} {
