{% doc %}
  @prompt
    Create a custom CSS block that sets the slideshow section height to 100vh (full viewport height). The CSS should target the slideshow section and ensure it takes up the full height of the screen., 通常のスライダーセクションと同様のプロパティを設けてください, そもそも、スライドショーセクションを作成して、100vhを指定できるようなブロックを作って
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.desktop_height }}vh;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
  }

  .ai-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    transition: transform {{ block.settings.transition_duration }}s ease-in-out;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    display: flex;
    align-items: {{ block.settings.content_alignment_vertical }};
    justify-content: {{ block.settings.content_alignment_horizontal }};
  }

  .ai-slideshow-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_behavior }};
    z-index: 1;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-slideshow-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  {% if block.settings.overlay_enabled %}
    .ai-slideshow-slide-{{ ai_gen_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: {{ block.settings.overlay_color }};
      opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
      z-index: 2;
    }
  {% endif %}

  .ai-slideshow-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 20px;
    {% if block.settings.show_text_box %}
      background-color: {{ block.settings.text_box_color }};
      border-radius: {{ block.settings.text_box_border_radius }}px;
      {% if block.settings.text_box_opacity < 100 %}
        background-color: {{ block.settings.text_box_color | color_modify: 'alpha', block.settings.text_box_opacity | divided_by: 100.0 }};
      {% endif %}
    {% endif %}
  }

  .ai-slideshow-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-slideshow-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-slideshow-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ settings.button_border_radius_primary }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: {{ settings.primary_button_border_width }}px solid {{ block.settings.button_color }};
  }

  .ai-slideshow-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_color }};
  }

  {% if block.settings.show_navigation_arrows %}
    .ai-slideshow-nav-{{ ai_gen_id }} {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: {{ block.settings.nav_color }};
      color: {{ block.settings.nav_icon_color }};
      border: none;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      cursor: pointer;
      z-index: 4;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      opacity: {{ block.settings.nav_opacity | divided_by: 100.0 }};
    }

    .ai-slideshow-nav-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.nav_hover_color }};
      opacity: 1;
    }

    .ai-slideshow-nav-prev-{{ ai_gen_id }} {
      left: 20px;
    }

    .ai-slideshow-nav-next-{{ ai_gen_id }} {
      right: 20px;
    }

    .ai-slideshow-nav-{{ ai_gen_id }} svg {
      width: 20px;
      height: 20px;
    }
  {% endif %}

  {% if block.settings.show_navigation_dots %}
    .ai-slideshow-dots-{{ ai_gen_id }} {
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 8px;
      z-index: 4;
    }

    .ai-slideshow-dot-{{ ai_gen_id }} {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background-color: {{ block.settings.dot_color }};
      opacity: {{ block.settings.dot_opacity | divided_by: 100.0 }};
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .ai-slideshow-dot-{{ ai_gen_id }}.active {
      background-color: {{ block.settings.dot_active_color }};
      opacity: 1;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-slideshow-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}vh;
    }

    .ai-slideshow-slide-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_content_alignment_vertical }};
      justify-content: {{ block.settings.mobile_content_alignment_horizontal }};
    }

    .ai-slideshow-image-{{ ai_gen_id }} {
      object-fit: {{ block.settings.mobile_image_behavior }};
    }

    .ai-slideshow-content-{{ ai_gen_id }} {
      text-align: {{ block.settings.mobile_text_alignment }};
      max-width: 100%;
      padding: 15px;
    }

    .ai-slideshow-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-slideshow-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-slideshow-nav-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-slideshow-nav-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-slideshow-nav-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

