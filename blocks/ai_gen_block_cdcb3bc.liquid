    .ai-slideshow-slide-{{ ai_gen_id }} .ai-slideshow-desktop-image-{{ ai_gen_id }} {
      display: none;
    }

    .ai-slideshow-slide-{{ ai_gen_id }} .ai-slideshow-mobile-image-{{ ai_gen_id }} {
