{% doc %}
  @prompt
    Create a slideshow section with the following features:
    - Individual image settings for mobile and desktop (separate image uploads for each device)
    - Customizable text overlay with adjustable positioning (top/center/bottom and left/center/right alignment options)
    - Customizable button with adjustable positioning (top/center/bottom and left/center/right alignment options)
    - Button text and link URL settings
    - Text color and button color customization
    - Multiple slides support (ability to add/remove slides)
    - Responsive design that switches between mobile and desktop images based on screen size
    - Smooth slide transitions with navigation arrows and dots
    - Flexible height settings with options for: 100vh (full viewport height), 75vh, 50vh, custom pixel values, and percentage-based heights
    - Flexible width settings with options for: 100% (full width), custom percentage values, and max-width constraints
    - Settings to control height separately for mobile and desktop
    - Full-width layout similar to hero banner style with object-fit cover for images
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slideshow-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.width_type }};
    {% if block.settings.width_type == 'custom' %}
      width: {{ block.settings.custom_width }}%;
    {% endif %}
    {% if block.settings.max_width_enabled %}
      max-width: {{ block.settings.max_width }}px;
    {% endif %}
    margin: 0 auto;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-slideshow-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    {% if block.settings.height_type_desktop == 'viewport' %}
      height: {{ block.settings.viewport_height_desktop }}vh;
    {% elsif block.settings.height_type_desktop == 'custom' %}
      height: {{ block.settings.custom_height_desktop }}px;
    {% else %}
      height: auto;
      min-height: 400px;
    {% endif %}
  }

  .ai-slideshow-slides-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-slideshow-slide-{{ ai_gen_id }} .ai-slideshow-mobile-image-{{ ai_gen_id }} {
    display: none;
  }

  .ai-slideshow-content-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
    color: {{ block.settings.text_color }};
    text-align: center;
    max-width: 90%;
    padding: 20px;
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-top-{{ ai_gen_id }} {
    top: 10%;
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-center-{{ ai_gen_id }} {
    top: 50%;
    transform: translateY(-50%);
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-bottom-{{ ai_gen_id }} {
    bottom: 10%;
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-horizontal-left-{{ ai_gen_id }} {
    left: 5%;
    text-align: left;
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-horizontal-center-{{ ai_gen_id }} {
    left: 50%;
    transform: translateX(-50%);
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-horizontal-right-{{ ai_gen_id }} {
    right: 5%;
    text-align: right;
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-center-{{ ai_gen_id }}.ai-slideshow-horizontal-center-{{ ai_gen_id }} {
    transform: translate(-50%, -50%);
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-center-{{ ai_gen_id }}.ai-slideshow-horizontal-left-{{ ai_gen_id }} {
    transform: translateY(-50%);
  }

  .ai-slideshow-content-{{ ai_gen_id }}.ai-slideshow-vertical-center-{{ ai_gen_id }}.ai-slideshow-horizontal-right-{{ ai_gen_id }} {
    transform: translateY(-50%);
  }

  .ai-slideshow-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 15px;
    line-height: 1.2;
  }

  .ai-slideshow-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0 0 20px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-slideshow-button-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid {{ block.settings.button_color }};
  }

