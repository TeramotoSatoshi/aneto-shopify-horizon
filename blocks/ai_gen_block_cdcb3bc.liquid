      {% if block.settings.height_type_mobile == 'viewport' %}
        height: {{ block.settings.viewport_height_mobile }}vh;
      {% elsif block.settings.height_type_mobile == 'custom' %}
        height: {{ block.settings.custom_height_mobile }}px;
      {% else %}
        height: auto;
        min-height: 300px;
      {% endif %}
