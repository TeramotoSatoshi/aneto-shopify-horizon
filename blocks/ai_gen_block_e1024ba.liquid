{% doc %}
  @prompt
    写真の上にコレクションタイトルの文字
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-overlay-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-collection-overlay__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-overlay__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-collection-overlay__placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collection-overlay__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-overlay__text-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    padding: {{ block.settings.overlay_padding }}px;
  }

  .ai-collection-overlay__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-align: {{ block.settings.text_align }};
    margin: 0;
    {% if block.settings.text_shadow %}
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    {% endif %}
    {% if block.settings.background_overlay %}
      background-color: {{ block.settings.background_color }};
      padding: {{ block.settings.text_padding }}px;
      border-radius: {{ block.settings.text_border_radius }}px;
    {% endif %}
  }

  .ai-collection-overlay__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-overlay__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.7 }}px;
    }

    .ai-collection-overlay__text-overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.overlay_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-collection-overlay-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-overlay__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.collection != blank and block.settings.collection.image %}
      <img
        src="{{ block.settings.collection.image | image_url: width: 2000 }}"
        alt="{{ block.settings.collection.image.alt | default: block.settings.collection.title | escape }}"
        loading="lazy"
        width="{{ block.settings.collection.image.width }}"
        height="{{ block.settings.collection.image.height }}"
        class="ai-collection-overlay__image-{{ ai_gen_id }}"
      >
    {% elsif block.settings.custom_image %}
      <img
        src="{{ block.settings.custom_image | image_url: width: 2000 }}"
        alt="{{ block.settings.custom_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.custom_image.width }}"
        height="{{ block.settings.custom_image.height }}"
        class="ai-collection-overlay__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-collection-overlay__placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
        <div class="ai-collection-overlay__empty-state-{{ ai_gen_id }}">
          コレクションまたは画像を選択してください
        </div>
      </div>
    {% endif %}

    <div class="ai-collection-overlay__text-overlay-{{ ai_gen_id }}">
      {% if block.settings.custom_title != blank %}
        <h2 class="ai-collection-overlay__title-{{ ai_gen_id }}">
          {{ block.settings.custom_title }}
        </h2>
      {% elsif block.settings.collection != blank %}
        <h2 class="ai-collection-overlay__title-{{ ai_gen_id }}">
          {{ block.settings.collection.title }}
        </h2>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "コレクション画像オーバーレイ",
  "settings": [
    {
      "type": "header",
      "content": "コンテンツ"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "コレクション"
    },
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "カスタム画像"
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "カスタムタイトル"
    },
    {
      "type": "header",
      "content": "画像設定"
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "アスペクト比",
      "options": [
        {
          "value": "1/1",
          "label": "正方形 (1:1)"
        },
        {
          "value": "4/3",
          "label": "横長 (4:3)"
        },
        {
          "value": "16/9",
          "label": "ワイド (16:9)"
        },
        {
          "value": "3/4",
          "label": "縦長 (3:4)"
        }
      ],
      "default": "16/9"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "角の丸み",
      "default": 0
    },
    {
      "type": "header",
      "content": "テキストスタイル"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "フォントサイズ",
      "default": 48
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "フォントの太さ",
      "options": [
        {
          "value": "400",
          "label": "標準"
        },
        {
          "value": "500",
          "label": "ミディアム"
        },
        {
          "value": "600",
          "label": "セミボールド"
        },
        {
          "value": "700",
          "label": "ボールド"
        }
      ],
      "default": "700"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "テキストカラー",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "テキスト配置",
      "options": [
        {
          "value": "left",
          "label": "左"
        },
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "right",
          "label": "右"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "text_shadow",
      "label": "テキストシャドウ",
      "default": true
    },
    {
      "type": "header",
      "content": "テキスト位置"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "縦位置",
      "options": [
        {
          "value": "flex-start",
          "label": "上"
        },
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "flex-end",
          "label": "下"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "横位置",
      "options": [
        {
          "value": "flex-start",
          "label": "左"
        },
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "flex-end",
          "label": "右"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "overlay_padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "余白",
      "default": 40
    },
    {
      "type": "header",
      "content": "テキスト背景"
    },
    {
      "type": "checkbox",
      "id": "background_overlay",
      "label": "背景を表示",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "背景カラー",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "text_padding",
      "min": 5,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "テキスト内側余白",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "テキスト背景の角の丸み",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "コレクション画像オーバーレイ"
    }
  ]
}
{% endschema %}