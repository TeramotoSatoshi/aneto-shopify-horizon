{% doc %}
  @prompt
    ルック写真を並べられるギャラリー
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-look-gallery-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-look-gallery__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-look-gallery__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 32px;
    color: {{ block.settings.heading_color }};
  }

  .ai-look-gallery__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-look-gallery__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: {{ block.settings.aspect_ratio }};
  }

  .ai-look-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  {% if block.settings.enable_hover_zoom %}
    .ai-look-gallery__item-{{ ai_gen_id }}:hover .ai-look-gallery__image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% endif %}

  .ai-look-gallery__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
    padding: 20px;
    opacity: {% if block.settings.show_overlay_always %}1{% else %}0{% endif %};
    transition: opacity 0.3s ease;
  }

  {% unless block.settings.show_overlay_always %}
    .ai-look-gallery__item-{{ ai_gen_id }}:hover .ai-look-gallery__overlay-{{ ai_gen_id }} {
      opacity: 1;
    }
  {% endunless %}

  .ai-look-gallery__caption-{{ ai_gen_id }} {
    color: #ffffff;
    font-size: 14px;
    margin: 0;
  }

  .ai-look-gallery__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-look-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-look-gallery__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-look-gallery__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-look-gallery-{{ ai_gen_id }} {
      padding: 30px 16px;
    }

    .ai-look-gallery__heading-{{ ai_gen_id }} {
      margin-bottom: 24px;
    }
  }
{% endstyle %}

<look-gallery-{{ ai_gen_id }}
  class="ai-look-gallery-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-look-gallery__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-look-gallery__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-look-gallery__grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign caption_key = 'caption_' | append: i
          assign image = block.settings[image_key]
          assign caption = block.settings[caption_key]
        %}

        <div class="ai-look-gallery__item-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-look-gallery__image-{{ ai_gen_id }}"
            >
            {% if caption != blank %}
              <div class="ai-look-gallery__overlay-{{ ai_gen_id }}">
                <p class="ai-look-gallery__caption-{{ ai_gen_id }}">{{ caption }}</p>
              </div>
            {% endif %}
          {% else %}
            <div class="ai-look-gallery__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-look-gallery__empty-state-{{ ai_gen_id }}">
                画像を追加
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</look-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class LookGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('look-gallery-{{ ai_gen_id }}', LookGallery{{ ai_gen_id }});
  })();
</script>

